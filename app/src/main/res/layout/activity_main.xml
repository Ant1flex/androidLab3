<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@color/dark">

    <Button
        android:id="@+id/lengthBtn"
        android:layout_width="250dp"
        android:layout_height="75dp"
        android:text="@string/lengthBtn"
        android:textColor="@color/white"
        app:layout_constraintVertical_chainStyle="packed"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/weightBtn"
        app:layout_constraintVertical_bias="0.35"/>

    <Button
        android:id="@+id/weightBtn"
        android:layout_width="250dp"
        android:layout_height="75dp"
        android:text="@string/weightBtn"
        android:textColor="@color/white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/lengthBtn"
        app:layout_constraintBottom_toTopOf="@id/temperatureBtn"
        app:layout_constraintVertical_bias="0.4"/>

    <Button
        android:id="@+id/temperatureBtn"
        android:layout_width="250dp"
        android:layout_height="75dp"
        android:text="@string/temperatureBtn"
        android:textColor="@color/white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/weightBtn"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="0.55"/>

    <TextView
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:text="@string/studentInfo"
        android:textAlignment="center"
        android:textSize="20dp"
        android:textColor="@color/black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="0.9"/>

</androidx.constraintlayout.widget.ConstraintLayout>